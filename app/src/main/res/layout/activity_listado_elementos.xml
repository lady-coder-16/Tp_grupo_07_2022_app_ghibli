<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ListadoElementos">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentListado"
        android:name="com.example.tp_grupo_07_2022_app_ghibli.FragmentLista"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_lista"

        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDetalles"
        android:name="com.example.tp_grupo_07_2022_app_ghibli.FragmentDescripcion"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_descripcion" />


</LinearLayout>